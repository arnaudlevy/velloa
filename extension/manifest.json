{
  "name": "Velloa",
  "description" : "Add articles to Velloa",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "https://www.velloa.fr/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Add to Velloa"
  },
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "manifest_version": 2
}
