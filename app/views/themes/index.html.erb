<% content_for :title, 'Thèmes' %>
<div class="themes">
  <header>
    <h1>Thèmes</h1>
    <%= link_to 'Nouveau thème',
                new_theme_path,
                class: 'btn btn-light btn-sm' if can? :create, Theme %>
  </header>
  <div class="row">
    <% @themes.each do |theme| %>
    <div class="col-md-4 mb-5">
      <h2><%= link_to theme, theme %></h2>
      <p><%= theme.articles.count %> articles</p>
    </div>
    <% end %>
  </div>
</div>
