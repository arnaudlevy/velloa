<% content_for :title, "Sources" %>
<div class="sources">
  <header><h1>Sources</h1></header>
  <div class="row">
    <% @sources.each do |source| %>
    <div class="col-md-2">
      <%= link_to source do %>
      <%= image_tag source.image, class: 'img-fluid img-fill mt-2' unless source.image.nil? %>
      <p class="mt-2"><%= source %></p>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
