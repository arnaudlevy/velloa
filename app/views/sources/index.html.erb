<% content_for :title, 'Sources' %>
<div class="sources">
  <header><h1>Sources</h1></header>
  <div class="row">
    <% @sources.each do |source| %>
    <div class="col-md-2">
      <%= link_to source do %>
        <article class="sources__source">
          <h1><%= source %></h1>
          <% if source.country %>
            <p><%= source.country %></p>
          <% end %>
          <% unless source.image.nil? %>
            <div class="sources__source__image">
              <img src="<%= source.image %>" alt="<%= source %>">
            </div>
          <% end %>
        </article>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
