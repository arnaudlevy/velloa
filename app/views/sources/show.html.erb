<h1><%= @source %></h1>
<p><%= @source.url %></p>
<%= link_to 'Edit', edit_source_path(@source), class: 'btn btn-sm btn-primary' %>
<div class="row">
  <% @source.articles.each do |article| %>
    <div class="col-md-2">
      <%= link_to article do %>
        <%= image_tag article.image, class: 'img-fluid' %>
        <p><%= article %></p>
      <% end %>
    </div>
  <% end %>
</div>
