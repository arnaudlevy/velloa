<div class="home">
  <header class="d-none">
    <h1>Velloa</h1>
  </header>
  <div class="row justify-content-between">
    <% @themes.each do |theme| %>
      <div class="col-md-5">
        <h2>
          <%= link_to theme, theme %>
        </h2>
        <% @articles.joins(:themes).where(themes: {id: theme }).limit(3).each do |article| %>
          <%= render 'articles/article.raw', article: article %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
