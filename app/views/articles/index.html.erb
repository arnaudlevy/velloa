<%= link_to 'New Article', new_article_path %>

<div class="row">
  <% @articles.each do |article| %>
    <div class="col-md-2">
      <%= link_to article do %>
        <td><%= image_tag article.image, class: 'img-fluid' %></td>
        <h2><%= article %></h2>
      <% end %>
    </div>
  <% end %>
</div>
