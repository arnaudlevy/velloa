<%= simple_form_for Article.new do |f| %>
  <div class="row">
    <div class="col-md-10">
      <%= f.input :url, as: :string, placeholder: 'URL', label: false %>
    </div>
    <div class="col-md-2">
      <%= f.button :submit, class: 'btn-block' %>
    </div>
  </div>
<% end %>

<div class="row">
  <% @articles.each do |article| %>
    <div class="col-md-2">
      <%= link_to article do %>
        <td><%= image_tag article.image, class: 'img-fluid' %></td>
        <h2><%= article %></h2>
      <% end %>
    </div>
  <% end %>
</div>
